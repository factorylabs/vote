body a
  color #585656

.upcase
  text-transform uppercase
.bold
  font-weight bold
.orange
  color #ff9861 !important

.dim
  opacity .5
  &:hover
    opacity 1

.category-container
  padding-bottom 30px
  border-bottom 2px solid #ddd
.admin.category-container form
  margin-top 15px

.entries
  margin -30px 0 0 -30px
  .entry
    &.vote
      cursor pointer
    position relative
    float left
    text-align center
    margin 30px 0 0 30px
    width 370px
    height 370px
    img
      width 360px
      height 360px
    h4
      position absolute
      bottom 10px
      margin 0
      width 100%
      height 30px
      line-height 30px
      background rgba(0,0,0,.7)
      color white
      font-weight normal
    .badge
      position absolute
      top -10px
      right -10px
      font-size 20px
      line-height 25px

.admin
  .entry
    margin 30px 0 0 30px
    width 170px
    height 170px
    img
      width 160px
      height 160px
    h4
      width 170px
    form.delete-entity
      position absolute
      top 10px
      right -10px

body .btn-huge
  margin-top 15px
  font-size 25px !important
  line-height 30px !important

.factoryize
  font-family: "DIN Next W01 Regular"
  color #585656

body .btn-factory-orange {
  color: #FFF;
  font-size: 14px;
  font-family: "DIN Next W01 Regular";
  padding: 3px 8px 1px;
  text-transform: uppercase;
  text-shadow: 0 1px 1px rgba(0,0,0,0.5);
  background-color: #ff9861;
  background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #ff9861), color-stop(100%, #fa5700));
  background-image: -webkit-linear-gradient(top, #ff9861, #fa5700);
  background-image: -moz-linear-gradient(top, #ff9861, #fa5700);
  background-image: -ms-linear-gradient(top, #ff9861, #fa5700);
  background-image: -o-linear-gradient(top, #ff9861, #fa5700);
  background-image: linear-gradient(top, #ff9861, #fa5700);

  &:hover {
    color: #f4f4f4;
    background-color: #fa5700;
  }
}
