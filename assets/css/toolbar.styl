/* Body, font, a styles */
body
  padding 70px 0 0
  a
    -webkit-transition color .15s ease-in-out, background-color .15s ease-in-out
    -moz-transition color .15s ease-in-out, background-color .15s ease-in-out
    -o-transition color .15s ease-in-out, background-color .15s ease-in-out
    transition color .15s ease-in-out, background-color .15s ease-in-out

/* Toolbar specific styles */
nav.factory.navbar
  border-top 3px solid #f0612a
  background #fff
  -webkit-box-shadow none
  box-shadow none

  a
    font-family "DIN Next W01 Regular"

  .nav
    & > li
      & > a.navbar-brand
        background url('/img/logo.png') 0 15px no-repeat
        background-size 106px 17px
        height 34px
        margin-left 10px
        padding-left 115px
        color #fa5700
        font-size 16px

      & > .dropdown-menu:before
        display none
        left 42px

      & > ul.dropdown-menu
        background #FFF
        border-top 2px solid #f0612a
        border-bottom 2px solid #f0612a
        -webkit-border-radius 0
        border-radius 0

        &:after
          border-bottom 6px solid #f0612a
          left 43px
          right auto

        li.divider
          border-color #e3e3e3

        li a
          color #777777
          font-size 14px
          font-weight 500
          line-height 16px
          text-transform uppercase

          &:hover
            background #e3e3e3
            color #f0612a

      a
        color #777
        padding 17px 10px 12px
        text-shadow none
        text-transform uppercase

        &:hover
          color #f0612a

      &.dropdown
        & > a.dropdown-toggle .caret
          margin-top -10px
          border-top-color #f0612a
          margin-left 5px

        &.open > .dropdown-toggle
          background-color #FFF

    ul.dropdown-menu
      min-width 110px

      li
        &.divider
          background-color #eee
          border-color #ddd
          width 100%

        a
          padding 5px 10px 0px 10px
          color #999
          text-shadow none

          &:hover
            color #f0612a
            background #eee
            background-image none

    &.navbar-right
      & > li > a
        &:after
          content "\."
          color #f0612a

        &.dropdown-toggle:after
          position relative
          left -12px
